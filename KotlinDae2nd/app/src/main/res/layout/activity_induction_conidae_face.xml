<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InductionConidaeFaceActivity">
    <ImageView
        android:id="@+id/imageInductSkin"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img" />

    <ImageView
        android:id="@+id/imgInductLeftEye"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:rotation="90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageInductSkin"
        app:srcCompat="@drawable/nomalleft" />

    <ImageView
        android:id="@+id/imgInductRightEye"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="@+id/imageInductSkin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgInductLeftEye"
        app:srcCompat="@drawable/nomalleft" />

    <ImageView
        android:id="@+id/imgInductMouth"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginEnd="250dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="@+id/imageInductSkin"
        app:layout_constraintEnd_toEndOf="@+id/imageInductSkin"
        app:layout_constraintTop_toTopOf="@+id/imageInductSkin"
        app:srcCompat="@drawable/smile" />

</androidx.constraintlayout.widget.ConstraintLayout>